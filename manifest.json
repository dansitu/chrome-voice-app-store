{
  "manifest_version": 2,

  "name": "Voice App Store",
  "description": "The gateway to a multitude of voice-powered micro-apps within Google Chrome.",
  "version": "0.1",

  "browser_action": {
    "default_title": "Voice App Store"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "commands": {
    "listen-for-speech": {
      "suggested_key": {
        "default": "Ctrl+Shift+M"
      },
      "description": "Listen for a spoken command"
    }
  },

  "permissions": [
    "experimental"
  ]
}

